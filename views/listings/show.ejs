<% layout("/layouts/boilerplate") %>

<body>
  <div class="container my-5">
    <h1 class="text-center mb-4">Listing Details</h1>

    <!-- Listing details container -->
    <div class="card shadow-sm">
      <div class="card-body">
        <!-- Title -->
        <h2 class="card-title mb-3"><%= listing.title %></h2>

        <!-- Price -->
        <h3 class="card-subtitle mb-3 text-muted">
          &#8377; <%= listing.price.toLocaleString('en-IN') %> per night
        </h3>

        <!-- Description -->
        <p class="card-text mb-4"><%= listing.description %></p>

        <!-- Location -->
        <p class="card-text"><strong>Location:</strong> <%= listing.location %></p>

        <!-- Country -->
        <p class="card-text"><strong>Country:</strong> <%= listing.country %></p>

        <!-- Image -->
        <% if (listing.image && listing.image.url) { %>
          <div class="text-center mb-4">
            <img src="<%= listing.image.url %>" alt="Listing Image" class="img-fluid rounded shadow-sm" style="max-height: 300px; width: auto;">
          </div>
        <% } %>

        <!-- Edit and Delete buttons -->
        <div class="d-flex justify-content-between">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Back to Listings Link -->
    <div class="text-center mt-4">
      <a href="/listings" class="btn btn-outline-secondary">Back to Listings</a>
    </div>
  </div>
</body>
